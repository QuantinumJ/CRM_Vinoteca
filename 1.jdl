
entity Empresa {
	nombreSocial String required,
    cif String required,
    telefono String required,
    email String required,
    direccion String required
}

entity Empleado{
nombre String required,
apellido String required,
dni String required,
fechaAlta LocalDate required,
telefono String required,
email String,
direccion String required,
activo Boolean
}
entity Cliente{
nombre String required,
apellido String required,
dni String required,
fechaAlta LocalDate,
telefono String,
email String,
direccion String required,
fidelizado Boolean
}
// La creacion de albaran nos sirve para meter en stock la mercancia recibida de los proveedores

entity Factura{
numero String,
fecha Instant
}
entity Venta{
fechaHora Instant,
cantidad Integer,
totalNeto Double,
totalPagar Double,
tipoDePago FormaPago
}
entity Caja{
fechaDia LocalDate,
totalDia Double,
valorInicial Double
}

// EN LA RELACION CON EL TICKET HAY QUE TRAER NOMBRE EMPRESA, DIRECCION, TELEFONO, PRODUCTOS

enum FormaPago{
TARJETA,
METALICO
}

entity VinoRosado{
