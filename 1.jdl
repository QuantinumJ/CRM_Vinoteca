denominacionOrigen DomOrg,
anoCosecha LocalDate,
nombre String,
maduracion String,
descripcion String,
cata String,
purezaVino Double,
precioBruto Double
tipoUvaTinta UvaTinta,
tipoUvaBlanca UvaBlanca,
stock Integer

}
entity VinoTinto{
