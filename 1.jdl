relationship ManyToOne{
Cliente{empresa} to Empresa,
Empleado{empresa} to Empresa,
Factura{empresa} to Empresa,
Venta{empleado} to Empleado,
Venta{vinoTinto} to VinoTinto,
Venta{vinoRosado} to VinoRosado,
Venta{vinoBlanco} to VinoBlanco,
Caja{venta} to Venta
}
relationship OneToOne{
Venta{factura} to Factura
Factura{cliente} to Cliente
}

